b-container#deck.mt-5
    b-row(v-for="line in Math.ceil(flights.length / 4)" :key="line").mb-5
        b-card-group(deck)
            b-card(bg-variant="primary" text-variant="white" :header="flight.code" :class="'flights-' + $store.state.theme" v-for="(flight,index) in flights.slice((line-1)*4,((line-1)*4)+4)" :key="flight.id").text-center
                b-card-text ID = {{ flight.id }}
                b-card-text Departure: {{ flight.departureAirport.name }} {{ flight.departureAirport.code }}
                b-card-text Arrival: {{ flight.arrivalAirport.name }} {{ flight.arrivalAirport.code }}
                b-card-text Departure date: {{ flight.dateDeparture }}