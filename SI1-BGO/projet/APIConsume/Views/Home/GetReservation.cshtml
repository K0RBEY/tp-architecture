@model Reservation
@{ Layout = "_Layout"; ViewBag.Title = "Get Reservation by Id";}

<h2>Chercher votre Reservation par son Id <a asp-action="Index" class="btn btn-sm btn-primary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label for="id">Id:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">verifier une Reservation</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Reservation</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Prix</th>
                <th>Depart</th>
                <th>Arriver</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Prix</td>
                <td>@Model.Depart</td>
                <td>@Model.Arriver</td>
            </tr>
        </tbody>
    </table>
}