@model Reservation
@{ Layout = "_Layout"; ViewBag.Title = "Update a Reservation from PATCH request";}

<h2>Update a Reservation from Patch request<a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label asp-for="Prix"></label>
        <input class="form-control" asp-for="Prix" />
    </div>
    <div class="form-group">
        <label asp-for="Depart"></label>
        <input class="form-control" asp-for="Depart" />
    </div>
    <div class="form-group">
        <label asp-for="Arriver"></label>
        <input class="form-control" asp-for="Arriver" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>